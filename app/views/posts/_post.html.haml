%article.post
  %header
    .gravatar
      = link_to image_tag(gravatar_url(post.editor.email)), editor_posts_path(post.editor.id), :title => post.editor.name
    .meta
      %h2= link_to post.title, post
      %div
        %span= link_to post.editor.name, editor_posts_path(post.editor.id)
        %time{:datetime => post.published_at}
          = time_ago_in_words post.published_at
          ago
        %span.tags= raw post.tags.map{|tag| link_to(tag.name, tag_posts_path(tag), :rel => 'tag')}.join(' ')

  %section
    = raw find_and_preserve(post.content)
